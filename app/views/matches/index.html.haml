%p#notice= notice
%h1 Listing Matches
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @matches.each do |match|
      %tr
        %td.table-row-title= match.created_by
        %td.table-row-actions= link_to 'Join', join_match_path(match, {username: @username})
        %td.table-row-actions= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Match', new_match_path({username: params["username"]})
